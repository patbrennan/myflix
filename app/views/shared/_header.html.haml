%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", home_path

  - if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Recent", recent_videos_path
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue"
      %li= link_to "People"
    %form.col-md-5.navbar-form{action: search_videos_path, method: "get"}
      .form-group
        %input.form-control(type="text" placeholder="Search for videos here" name="query")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "Welcome, #{@user.full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", logout_path
